# ==============================
# Dockerfile for Restaurant Order Management System
# ==============================

# Sử dụng image Python chính thức
FROM python:3.10

# Thiết lập thư mục làm việc trong container
WORKDIR /app

# Sao chép toàn bộ mã nguồn vào container
COPY . .

# Lệnh chạy chương trình chính
CMD ["python", "main.py"]